[Unit]
Description=uWSGI PyPI server instance
After=syslog.target

[Service]
ExecStart=/apps/production_test/bin/uwsgi -H /apps/production_test --master --processes 4 --threads 2 --http :5000 --manage-script-name --python-path /apps/production_test/flaskapp/myapp --mount /=wsgi:app
RuntimeDirectory=/apps/production_test
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target